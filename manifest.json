{
  "manifest_version": 3,
  "name": "GPT Chat Notes & Highlights",
  "description": "Enhanced note-taking and text highlighting for ChatGPT and Gemini with favorites sidebar",
  "version": "3.0",

  "permissions": ["storage", "activeTab", "tabs"],

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
